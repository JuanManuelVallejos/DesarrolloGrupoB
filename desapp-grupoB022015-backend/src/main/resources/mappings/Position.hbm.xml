<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="ar.edu.unq.desapp.grupoB022015.model.Position">
		<id column="ID" name="id">
			<generator class="native" />
		</id>
		
		<joined-subclass name="ar.edu.unq.desapp.grupoB022015.model.Goalkeeper">
			<key column="pos" />
		</joined-subclass>
	
		<joined-subclass name="ar.edu.unq.desapp.grupoB022015.model.Defender">
			<key column="pos" />
		</joined-subclass>

		<joined-subclass name="ar.edu.unq.desapp.grupoB022015.model.Midfielder">
			<key column="pos"/>
		</joined-subclass>	
	
		<joined-subclass name="ar.edu.unq.desapp.grupoB022015.model.Forward">
			<key column="pos"/>
		</joined-subclass>
		
	</class>
</hibernate-mapping>