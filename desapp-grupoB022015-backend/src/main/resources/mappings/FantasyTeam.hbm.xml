<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="ar.edu.unq.desapp.grupoB022015.model.FantasyTeam">
		<id column="ID" name="id">
			<generator class="native" />
		</id>

		<property name="name" />
		
		<list name="players" inverse="false" cascade="all" lazy="false">
			<key column="playerID" />
			<list-index column="id" />
			<many-to-many class="ar.edu.unq.desapp.grupoB022015.model.Player"/>
		</list>

		<!-- <one-to-one name="dt" class="ar.edu.unq.desapp.grupoB022015.model.User"
			cascade="save-update" lazy="false"></one-to-one>  -->

	</class>
</hibernate-mapping>
