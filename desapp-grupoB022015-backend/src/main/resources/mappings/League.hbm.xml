<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="ar.edu.unq.desapp.grupoB022015.model.League">
		<id column="ID" name="id">
			<generator class="native" />
		</id>
	
		<property name="name" />
		<property name="minTeams" />
		<property name="maxTeams" />
		<property name="currentDate" />
		
		<list name="ranking" inverse="false" cascade="all" lazy="false">
			<key column="userID" />
			<list-index column="id" />
			<many-to-many class="ar.edu.unq.desapp.grupoB022015.model.User"/>
		</list>
		
    	
    	<list name="rankingForLeague" inverse="false" cascade="all" lazy="false">
			<key column="pointsForUser" />
			<list-index column="id" />
			<many-to-many class="ar.edu.unq.desapp.grupoB022015.model.PointsForUser" unique="true"/>
		</list>
    	
    	<!--
    	<one-to-one name="superGol" class="ar.edu.unq.desapp.grupoB022015.model.SuperGol"
			cascade="save-update" lazy="false"></one-to-one>
		-->
			
		<list name="fixture" inverse="false" cascade="all" lazy="false">
			<key column="dateID" />
			<list-index column="id" />
			<many-to-many class="ar.edu.unq.desapp.grupoB022015.model.Date" unique="true"/>
		</list>
		
	</class>
</hibernate-mapping>
