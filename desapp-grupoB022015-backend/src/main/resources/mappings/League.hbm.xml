<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="ar.edu.unq.desapp.grupoB022015.model.League">
		<id column="ID" name="id">
			<generator class="native" />
		</id>
	
		<property name="name" />
		
		<list name="ranking" inverse="false" cascade="all" lazy="false">
			<key column="userID" />
			<list-index column="id" />
			<many-to-many class="ar.edu.unq.desapp.grupoB022015.model.User" unique="true"/>
		</list>
		
		
		<map name="rankingForLeague">
        	<key column="userID"
            	 not-null="true"/>
        	<map-key column="points" 
            	type="string"/>
        	<one-to-many class="ar.edu.unq.desapp.grupoB022015.model.League"/>
    	</map>
    	
